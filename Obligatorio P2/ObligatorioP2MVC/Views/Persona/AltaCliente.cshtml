@model ObligatorioP2.Cliente

@{
    ViewData["Title"] = "AltaCliente";
}

<h1>AltaCliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="formAlta" asp-action="AltaCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" id="txtNombre" type="text" name="nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label">Apellido</label>
                <input asp-for="Apellido" id="txtApellido" type="text" name="apellido" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" id="txtEmail" type="email" name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Username</label>
                <input type="text" id="txtUsername" name="user" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input type="password" id="txtPassword" name="pass" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p id="pMensaje">@ViewBag.msg</p>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.querySelector("#formAlta").addEventListener('submit', validarDatos);

        function validarDatos(evento) {
            evento.preventDefault();

            let nombre = document.querySelector("#txtNombre").value;
            let apellido = document.querySelector("#txtApellido").value;
            let email = document.querySelector("#txtEmail").value;
            let username = document.querySelector("#txtUsername").value;
            let password = document.querySelector("#txtPassword").value;

            if (nombre != "" && apellido != "" && email != "" && username != "" && password != "") {
                this.submit();
            } else {
                document.querySelector("#pMensaje").innerHTML = "Algun dato no es correcto";
            }
        }
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

