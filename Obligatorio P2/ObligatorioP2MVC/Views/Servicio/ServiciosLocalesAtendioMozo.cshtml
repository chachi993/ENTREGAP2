@model IEnumerable<ObligatorioP2.Servicio>

@{ViewData["Title"] = "ServiciosLocalesAtendioMozo";
}

<h1>Servicios Locales Atendidos</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label"> Fecha 1</label>
                <input type="date" name="f1" class="form-control" />
            </div>

            <div class="form-group">
                <label class="control-label"> Fecha 2</label>
                <input type="date" name="f2" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Mostrar Servicios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioFinal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
            </tr>
        }
    </tbody>
</table>
