@model IEnumerable<ObligatorioP2.Servicio>


@{ViewData["Title"] = "ServiciosPorPlato";
}

<h1>Servicio Por Plato</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <select name="slcPlato">
                @foreach (var p in ViewBag.Platos)
                {
                    <option value="@p.Nombre">@p.Nombre</option>
                }
            </select>
            <br/>
            <br/>
            <div class="form-group">
                <input type="submit" value="Mostrar Servicios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioFinal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
            </tr>
        }
    </tbody>
</table>
